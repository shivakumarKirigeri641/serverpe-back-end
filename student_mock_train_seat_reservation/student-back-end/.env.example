# ============================================================================
# STUDENT MOCK TRAIN BACKEND - ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and configure your settings
# ============================================================================

# SERVER CONFIGURATION
# --------------------
# Port on which this student backend will run
PORT=7777

# SERVERPE API CONFIGURATION
# --------------------------
# Base URL of the main ServerPE API (do NOT include trailing slash)
# For local development: http://localhost:8888
# For production: https://api.serverpe.in (or your deployed URL)
SERVERPE_API_URL=http://localhost:8888

# LICENSE CONFIGURATION
# ---------------------
# Your unique license key provided by ServerPE
# Format: XXXX-XXXX-XXXX-XXXX
LICENSE_KEY=YOUR_LICENSE_KEY_HERE

# FINGERPRINT CONFIGURATION
# -------------------------
# Auto-generated on first run. Do NOT modify manually.
# DEVICE_FINGERPRINT=auto-generated

# FRONTEND CONFIGURATION
# ----------------------
# URL of the student frontend (for CORS)
FRONTEND_URL=http://localhost:3000

# DEBUG MODE
# ----------
# Set to true to see detailed error logs
DEBUG=true
